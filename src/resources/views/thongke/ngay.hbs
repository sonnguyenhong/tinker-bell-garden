<link rel="stylesheet" href="/css/app.css">
<link rel="stylesheet" href="/css/csvc.css">
<link rel="stylesheet" href="/css/chart.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
{{>header}}
    <div class="container-fluid my-4" style="width: 45%;">
        <h2 class="my-4" style="color: red;">Thống kê theo ngày</h2>
        <form class="form-inline">
            <div class="form-group mb-2">
                <label>Chọn ngày</label>
            </div>
            <div class="form-group mx-sm-3 mb-2">
                <input type="text" onfocus="(this.type='date')" onblur="if(!this.value)this.type='text'" id="day" class="form-control" name="day" required/>
            </div>
            <button type="submit" class="btn btn-danger mb-2">Thống kê</button>
        </form> 
    </div>
    <div class="wrap container-fluid my-4" style="width: 80%">   
        <h2>Biểu đồ</h2>
        <div class="barGraph">
          <ul class="graph">
            <span class="graph-barBack">
              <li class="graph-bar" data-value="100000000">
                <span class="graph-legend">Vé </span>
              </li>
            </span>  
      
            <span class="graph-barBack">    
              <li class="graph-bar" data-value="85000000">
                <span class="graph-legend">Sản phẩm</span>
              </li>
            </span>
          </ul>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            $('.graph-bar').each(function() {
                var dataWidth = $(this).data('value');
                $(this).css("width", dataWidth/1000000 + "%");
            });
        });
    </script>
{{>footer}}
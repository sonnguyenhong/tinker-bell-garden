
<link rel="stylesheet" href="/css/app.css">
<link rel="stylesheet" href="/css/csvc.css">
<link rel="stylesheet" href="/css/event.css">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
{{>header}}
<div class="container-fluid" style="width: 80%">
    <h2 class="my-4" style="color: red;">QUẢN LÝ HOẠT ĐỘNG</h2>
    <div class="row mb-2" id="page1">
        <div class="col mb-4">
            <a href="/admin/event/addEvent" style="text-decoration: none;">
                <div class="container-fluid btn-option" id="back" style="width: 40%">Thêm sự kiện</div>
            </a>
        </div>
        <div class="col">
        </div>
    </div>
    <input class="form-control my-4" id="myInput" type="text" placeholder="Tìm kiếm">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th style="width: 5%">#</th>
                <th style="width: 20%">Tên sự kiện</th>
                <th style="width: 26%">Thời gian bắt đầu</th>
                <th style="width: 26%">Thời gian kết thúc</th>
                <th style="width: 15%">Số mã giảm giá</th>
                <th style="width: 8%"></th>
            </tr>
        </thead>
        <tbody id="myTable">
            {{#each events}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{toString2 this.startDate }}</td>
                <td>{{toString2 this.endDate }}</td>
                <td>{{this.numberOfDiscountCode}}</td>
                <td>
                    <a href="/admin/event/{{this._id}}">
                        <span class="badge badge-success" style="width: 80%; height: 80%;">
                            <i class="ti-more" style="font-size: 16px;"></i>
                        </span>
                    </a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<script>
    $(document).ready(function(){
    $("#myInput").on("keyup", function() {
        var value = $(this).val().toLowerCase();
        $("#myTable tr").filter(function() {
        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
    });
    });
</script>
{{>footer}}


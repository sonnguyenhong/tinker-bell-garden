                colors: [
                        "orange", 
                        "green", 
                        ],
                pieSliceText: 'value',
                tooltip: {
                text: 'percentage'
                },
                fontName: 'Open Sans',
                chartArea: {
                width: '100%',
                height: '94%'
                },
                legend: {
                textStyle: {
                    fontSize: 13
                }
                }
            };
            // draw pie chart
            var pieChart = new google.visualization.PieChart(document.getElementById('pie-chart-ve1'));
            pieChart.draw(pieData, pieOptions);
        }
    </script>

    <script>
        google.load("visualization", "1", {packages:["corechart"]});
        google.setOnLoadCallback(drawCharts);
        function drawCharts() {
            // BEGIN PIE CHART
            // pie chart data
            var pieData = google.visualization.arrayToDataTable([
                ['Loại vé', 'Số vé'],
                ['Vé vip',      32],
                ['Vé thường',      56],
            ]);
            // pie chart options
            var pieOptions = {
                backgroundColor: 'transparent',
